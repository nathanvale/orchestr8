{
  "name": "node-pnpm-changesets-template",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "description": "Node.js + pnpm monorepo template with Next.js, Turborepo, Vitest, Changesets & ADHD-optimized DX",
  "homepage": "https://github.com/nathanvale/orchestr8#readme",
  "bugs": {
    "url": "https://github.com/nathanvale/orchestr8/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nathanvale/orchestr8.git"
  },
  "sideEffects": false,
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build --output-logs=errors-only",
    "changeset": "changeset",
    "clean": "turbo run clean",
    "dev": "turbo run dev --parallel",
    "format": "prettier --write --cache --cache-location .prettierrcache .",
    "format:check": "prettier --check --cache --cache-location .prettierrcache .",
    "lint": "turbo run lint --continue=dependencies-successful --output-logs=errors-only",
    "lint:fix": "turbo run lint:fix --continue=dependencies-successful --output-logs=errors-only",
    "prepare": "husky",
    "release": "pnpm build --silent && changeset publish --silent",
    "release:version": "changeset version",
    "release:publish": "pnpm build && changeset publish",
    "test": "NODE_OPTIONS='--max-old-space-size=4096' vitest run",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "test:coverage": "NODE_OPTIONS='--max-old-space-size=4096' vitest run --coverage",
    "test:integration": "NODE_OPTIONS='--max-old-space-size=4096' TEST_MODE=integration vitest run",
    "test:e2e": "TEST_MODE=e2e vitest run",
    "test:smoke": "vitest run --bail=1 --no-coverage **/*.smoke.test.*",
    "test:quick": "vitest run --bail=1 --no-coverage --pool=threads",
    "test:focused": ". scripts/compute-base.sh && vitest run --changed $BASE_SHA --no-coverage --bail=1",
    "test:debug": "vitest --inspect-brk --pool=threads --poolOptions.threads.singleThread",
    "test:turbo": "turbo run test --output-logs=errors-only",
    "test:turbo:changed": "turbo run test --filter=\"...[$TURBO_SCM_BASE]\" --output-logs=errors-only",
    "typecheck": "turbo run typecheck --output-logs=errors-only",
    "validate": "turbo run lint typecheck test test:integration \"//#format:check:root\" --output-logs=errors-only",
    "validate:changed": "turbo run lint typecheck test --filter=\"...[${TURBO_SCM_BASE:-origin/main}]\" --output-logs=errors-only",
    "validate:quick": "turbo run lint typecheck --output-logs=errors-only",
    "validate:nocache": "turbo run lint typecheck test test:integration \"//#format:check:root\" --output-logs=errors-only --force",
    "perf": "tsx scripts/performance-monitor.ts",
    "profile": "tsx scripts/memory-baseline.ts",
    "zombies": "tsx scripts/emergency-cleanup.ts",
    "zombies:kill": "./scripts/kill-all-zombies.sh",
    "test:safe": "./scripts/test-with-cleanup.sh",
    "governance": "echo 'Checking boundaries and circular dependencies... check complete'",
    "memory:baseline": "NODE_OPTIONS='--max-old-space-size=4096' tsx scripts/memory-baseline.ts",
    "memory:profile": "NODE_OPTIONS='--max-old-space-size=4096 --expose-gc' tsx scripts/memory-baseline.ts --profile",
    "memory:compare": "tsx scripts/memory-baseline.ts --compare",
    "memory:report": "tsx scripts/memory-baseline.ts --report",
    "server:start": "echo 'Performance benchmark server placeholder - implement based on your app needs'"
  },
  "config": {
    "commitizen": {
      "path": "cz-git"
    }
  },
  "dependencies": {
    "react": "19.1.1",
    "react-dom": "19.1.1"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.6",
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@edge-runtime/vm": "^5.0.0",
    "@eslint/js": "9.34.0",
    "@testing-library/jest-dom": "6.8.0",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.6.1",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "24.3.0",
    "@types/react": "19.1.11",
    "@types/react-dom": "19.1.8",
    "@vitest/coverage-v8": "3.2.4",
    "commitizen": "^4.3.1",
    "cz-git": "^1.12.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-security": "3.0.1",
    "eslint-plugin-sonarjs": "3.0.5",
    "eslint-plugin-turbo": "^2.5.6",
    "eslint-plugin-unicorn": "60.0.0",
    "eslint-plugin-vitest": "0.5.4",
    "happy-dom": "18.0.1",
    "husky": "^9.1.7",
    "js-yaml": "^4.1.0",
    "json5": "^2.2.3",
    "lint-staged": "^16.1.5",
    "msw": "2.10.5",
    "prettier": "^3.4.2",
    "tsup": "^8.3.0",
    "tsx": "^4.19.2",
    "turbo": "2.5.6",
    "type-fest": "^4.41.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "8.41.0",
    "vitest": "3.2.4"
  },
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "pnpm": {
    "overrides": {
      "vite@>=6.0.0 <=6.3.5": ">=6.3.6",
      "tmp@<=0.2.3": ">=0.2.4"
    }
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}
