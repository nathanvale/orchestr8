  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist .tsbuildinfo",
    "dev": "tsup --watch",
    "lint": "eslint . --cache --cache-location ../../.eslintcache/testkit",
    "prepublishOnly": "pnpm run build && test -d dist",
    "test": "vitest run -c ./vitest.config.ts",
    "test:watch": "vitest watch -c ./vitest.config.ts",
    "test:ui": "vitest --ui -c ./vitest.config.ts",
    "test:coverage": "vitest run --coverage -c ./vitest.config.ts",
    "typecheck": "tsc --noEmit",
    "bench": "vitest bench --config vitest.bench.config.ts",
    "bench:watch": "vitest bench --config vitest.bench.config.ts --watch",
    "bench:ci": "vitest bench --config vitest.bench.config.ts --run --reporter=json --outputFile=bench-results.json",
    "bench:compare": "node scripts/compare-benchmarks.js",
    "bench:baseline": "vitest bench --config vitest.bench.config.ts --run --reporter=json --outputFile=benchmarks/baseline-generated.json"
  },
