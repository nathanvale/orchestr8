{
  "name": "@template/quality-check",
  "version": "1.0.0",
  "description": "Production-ready quality check package for ESLint, Prettier, and TypeScript validation with <2s execution time",
  "keywords": [
    "quality-check",
    "eslint",
    "prettier",
    "typescript",
    "validation",
    "claude-code",
    "npx"
  ],
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "types": "./dist/index.d.ts",
  "bin": {
    "quality-check": "./bin/quality-check",
    "quality-check-claude-hook": "./bin/claude-hook"
  },
  "files": [
    "dist",
    "bin",
    "README.md"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "rm -rf dist .tsbuildinfo",
    "lint": "eslint . --cache --cache-location ../../.eslintcache/quality-check",
    "lint:fix": "NODE_NO_WARNINGS=1 eslint . --fix --cache --cache-location .eslintcache",
    "prepublishOnly": "pnpm run build && test -d dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@orchestr8/logger": "^2.0.0",
    "chalk": "^5.3.0",
    "eslint": "^9.18.0",
    "ignore": "^6.0.2",
    "picocolors": "^1.1.1",
    "pino": "^9.9.0",
    "pino-pretty": "^11.3.0",
    "prettier": "^3.4.2",
    "proper-lockfile": "^4.1.2",
    "simple-git": "^3.27.0",
    "typescript": "~5.7.2",
    "write-file-atomic": "^5.0.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/proper-lockfile": "^4.1.4",
    "@types/write-file-atomic": "^4.0.0",
    "typescript": "^5.7.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
