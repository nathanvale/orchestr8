{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tooling/tsconfig/esm-library.json",
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["ES2022", "DOM", "DOM.Iterable"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/__tests__/**/*.ts",
    "examples/**/*.ts",
    "test-*.ts"
  ],
  "exclude": ["dist", "node_modules", "**/*.test.ts", "**/*.spec.ts", "tsup.config.ts"]
}
